# TicketHub Environment Configuration
# Copy this file to .env and update with your values

# =============================================================================
# Flask Configuration
# =============================================================================
FLASK_ENV=development
FLASK_APP=run.py

# =============================================================================
# Security Keys (MUST CHANGE IN PRODUCTION!)
# Generate secure keys using: python -c "import secrets; print(secrets.token_hex(32))"
# =============================================================================
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production

# =============================================================================
# Database Configuration
# =============================================================================
DB_HOST=db
DB_PORT=5432
DB_NAME=tickethub
DB_USER=postgres
DB_PASSWORD=postgres

# Full database URL (alternative to individual settings)
# DATABASE_URL=postgresql://postgres:postgres@db:5432/tickethub

# =============================================================================
# Application Configuration
# =============================================================================
APP_PORT=5000

# =============================================================================
# Optional Services Configuration
# =============================================================================

# pgAdmin (Database Management Tool)
PGADMIN_EMAIL=admin@tickethub.local
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# Nginx Configuration (Production)
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# =============================================================================
# Google OAuth Configuration
# =============================================================================
# Get these from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here
GOOGLE_REDIRECT_URI=http://localhost:5000/api/auth/google/callback

# =============================================================================
# Optional Features
# =============================================================================

# Seed database on startup (true/false)
SEED_DATABASE=true

# Backup directory
BACKUP_DIR=./backups

# =============================================================================
# Production-specific Settings
# =============================================================================

# Workers and threads for Gunicorn (production)
GUNICORN_WORKERS=4
GUNICORN_THREADS=2
GUNICORN_TIMEOUT=60

# Log level (debug, info, warning, error, critical)
LOG_LEVEL=info
